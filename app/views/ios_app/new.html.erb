<center>
<%= form_for @iosapp, :url => { :controller => 'ios_app', :action => 'create' } do |f| %>
	<table border="1" width="50%" padding>
		<tr>
			<td><%= f.label :name, "Name" %></td>
			<td><%= f.text_field :name %></td>
		</tr>	
    	<tr>
			<td><%= f.label :description, "Description" %></td>
			<td><%= f.text_field :description %></td>
		</tr>
		<tr>
			<td><%= f.label :capacity, "Capacity" %></td>
			<td><%= f.select :capacity, @capacities %></td>
		</tr>
		<tr>
			<td><label for="upload_file">选择ipa文件</label></td>
			<td><%= file_field("file", "file") %></td>
		</tr>
		<tr>
			<td colspan="2" align="center"><%= f.submit "Create" %></td>
		</tr>
	</table> 
<% end %>
</center>